<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.overlord.apiman</groupId>
    <artifactId>apiman-distro</artifactId>
    <version>1.0.0.Alpha1</version>
  </parent>
  <artifactId>apiman-distro-fuse6</artifactId>
  <packaging>pom</packaging>
  <name>apiman-distro-fuse6</name>
  <dependencies>
    <dependency>
      <groupId>org.overlord.apiman</groupId>
      <artifactId>apiman-rt-api-rest</artifactId>
    </dependency>
    <dependency>
      <groupId>org.overlord.apiman</groupId>
      <artifactId>apiman-rt-api-rest-impl</artifactId>
    </dependency>
    <dependency>
      <groupId>org.overlord.apiman</groupId>
      <artifactId>apiman-rt-engine-beans</artifactId>
    </dependency>
    <dependency>
      <groupId>org.overlord.apiman</groupId>
      <artifactId>apiman-rt-engine-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.overlord.apiman</groupId>
      <artifactId>apiman-rt-engine-policies</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.overlord</groupId>
        <artifactId>overlord-commons-maven-plugin</artifactId>
        <version>${version.org.overlord.overlord-commons}</version>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>generate-features-xml</goal>
            </goals>
            <configuration>
              <outputFile>${project.build.directory}/features.xml</outputFile>
              <attach>true</attach>
              <repositories>
                <repository>mvn:org.overlord/overlord-commons-dist-fuse6/${version.org.overlord.overlord-commons}/xml/features</repository>
              </repositories>
              <features>
                <!-- All APIMan Dependencies -->
                <feature>
                  <name>apiman-dependencies</name>
                  <version>${project.version}</version>
                  <comment>All API Management Dependencies</comment>

                  <excludes>
                    <exclude>org.overlord.apiman:apiman-*:*</exclude>
                  </excludes>
                </feature>
                <!-- APIMan Runtime -->
                <feature>
                  <name>apiman-rt</name>
                  <version>${project.version}</version>
                  <comment>API Management Runtime</comment>
                  <dependsOnFeatures>
                    <feature>
                      <name>apiman-dependencies</name>
                      <version>${project.version}</version>
                    </feature>
                  </dependsOnFeatures>
                  <includes>
                    <include>org.overlord.apiman:apiman-*:*</include>
                  </includes>
                </feature>
                <!-- Everything -->
                <feature>
                  <name>apiman</name>
                  <version>${project.version}</version>
                  <comment>API Management (Kitchen Sink)</comment>
                  <dependsOnFeatures>
                    <feature>
                      <name>apiman-rt</name>
                      <version>${project.version}</version>
                    </feature>
                  </dependsOnFeatures>
                  <excludes>
                    <exclude>*:*:*</exclude>
                  </excludes>
                </feature>
              </features>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>