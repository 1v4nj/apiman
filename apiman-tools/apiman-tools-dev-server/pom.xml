    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>apiman-dt-api-rest-impl</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>apiman-dt-api-persistence</artifactId>
      <version>${project.version}</version>
